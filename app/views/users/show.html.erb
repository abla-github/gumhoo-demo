<% provide(:title, @user.name) %>
<% provide(:hide, 'show') %>
<div class="row row-space-3 row-space-top-2">
  <div class="col-sm-6">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </div>
  <div class="col-sm-6">
    <section class="stats row row-space-top-3">
      <div class="col-xs-6 col-md-offset-2 col-md-5 col-lg-offset-4 col-lg-4">
        <%= render 'follow_form' if logged_in? %>
      </div>
      <div class="col-xs-6 col-md-5 col-lg-4">
        <%= render 'shared/stats' %>
      </div>
    </section>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="grid hide">
      <%= render @posts %>
    </div>
    <%= will_paginate @posts %>
  </div>
</div>
