<%= form_for @post do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.hidden_field :picture, value: post_image(@doc) %>
  <%= f.hidden_field :link,    value: post_url %>
  
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control', value: post_title(@doc) %>
  
  <%= f.label :price %>
  <%= f.text_field :price, class: 'form-control', value: post_price(@doc) %>
  
  <%= f.label :content %>
  <%= f.text_area :content, class: 'form-control', rows: 5 %>
  
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
